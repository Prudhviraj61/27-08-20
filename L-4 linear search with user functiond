#Linear search with user function and dynamic input
def linearsearch(arr, elem):
    for i in range(len(arr)):
        if (arr[i] == elem):
            return i + 1
        else:
            continue
    return -1

#Giving input
limit = int(input("Enter the limit : "))

#iterating
arry = []
for i in range(0, limit):
    ele = input("Enter alphabet : ")
    arry.append(ele)

#entering element to find
findele = input('Enter element to find : ')
pos = str(linearsearch(arry, findele))

#printing output
print("The element found at index " + pos)

